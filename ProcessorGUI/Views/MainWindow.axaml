<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ProcessorGUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" MinWidth="400" SizeToContent="Height"
        x:Class="ProcessorGUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="ProcessorGUI">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

		<DockPanel>
			<Menu DockPanel.Dock="Top">
				<MenuItem Header="_File">
					<MenuItem Header="_Open" Command="{Binding OpenImageWindowCommand}"/>
					<MenuItem Header="_Save" Command="{Binding SaveImageCommand}"/>
					<MenuItem Header="_Duplicate" Command="{Binding DuplicateImageCommand}"/>
				</MenuItem>
			</Menu>
		</DockPanel>

</Window>
